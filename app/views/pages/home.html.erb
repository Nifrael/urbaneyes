<div class="logo-container">
  <div class="logo-row logo-justify-content-center">
    <div class="logo-col-auto logo-relative-container">
      <div class="logo-content-wrapper">
      <h1>UrbanEyes</h1>
      <p>Be the eyes of your city</p>
      <%= image_tag('binocular-transparent.png') %>
      </div>
    </div>
  </div>
</div>

<div class="profile-container">
  <div class="container-content">
    <div class="content-text">
      <h2>Hello Jiri</h2>
      <p>How would you like to enhance your city's public spaces today?</p>
    </div>
    <div class="content-avatar">
      <img src="https://www.lafabriquedeladanse.fr/wp-content/uploads/2018/06/Jiri-1-1-600x800.jpg" alt="Avatar">
    </div>
  </div>
</div>
<div class="btn-container">
  <a href="" class="btn">My Proposals</a>
  <a href="" class="btn">Improvements</a>
  <a href="" class="btn">Damages</a>
</div>
<div class="dec-container">
  <div class="dec-content">
    <div class="dec-card-improvement">
      <div class="image-container">
        <%= image_tag("Improvement.png", class:"image") %>
      </div>
      <div class="dec-text">
        <span>Propose an</span> <h2>Improvement</h2>
      </div>
    </div>
    <div class="dec-card-damage">
      <div class="image-container">
        <%= image_tag("Damage.png", class:"image") %>
      </div>
      <div class="dec-text">
        <span>Declare a</span><h2> Damage</h2>
      </div>
    </div>
  </div>
</div>

<div class="list-map-container">
  <div class="l-m-content">
    <div class="l-m-text">
      <h2>Vote for the best proposals of the community</h2>
    </div>
    <div class="l-m-buttons">
      <a href="" class="btn-l-m">List</a>
      <br>
      <br>
      <a href="" class="btn-l-m">Map</a>
    </div>
  </div>
</div>
