<div class="container content">

  <h2 class="dark">Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html:{ class:"mb-3" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                label_html: {class: "dark"},
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first_name" }%>
      <%= f.input :last_name,
                label_html: {class: "dark"},
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last_name" }%>
      <%= f.input :email,
                  label_html: {class: "dark"},
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :address,
                label_html: {class: "dark"},
                required: true,
                autofocus: true,
                input_html: { autocomplete: "address" }%>
      <%= f.input :password,
                  label_html: {class: "dark"},
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  hint_html: {class: "dark"},
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label_html: {class: "dark"},
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
