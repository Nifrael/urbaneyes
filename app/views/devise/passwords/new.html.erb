<div class="container content">

  <h2 class="mb-3 dark">Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:"mb-3" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  label_html: {class: "dark"},
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "dark" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Send" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
