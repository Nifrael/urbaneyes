<div class="link-notification-card">
<%= link_to ticket_path(notification.comment.ticket.id) do %>
<div class="notification-card">
  <div class="notification-time">
    <i><i class="fa-regular fa-comment"></i> <%= notification.created_at.strftime("%A %d %B %Y à %H:%M:%S") %></i>
  </div>
  <div class="text-notification">
    <strong> <%= notification.comment.user.first_name %> <%= notification.comment.user.last_name %> a commenté votre ticket :</strong>
  </div>
  <div class="text-notification">
    <p><%= notification.comment.ticket.title %></p>
  </div>
  </div>
</div>
  <% end %>
</div>
